%header
  活动报名 ({{applies.length}}人)
  .header-left
    %a.btn-style.btn-4(href="#/activitylist") 返回
  .header-right(ng-switch="switch")
    %button.btn.btn-style.btn-4(ng-switch-when="start" ng-click="apply_start()" ng-disabled="flag") 开始
    %button.btn.btn-style.btn-4(ng-switch-when="end" ng-click="apply_end()") 结束
#wrapper.wrapper.scrollable
  %ul.list-style-2
    %li(ng-repeat="apply in applies")
      %div(style=" float:left width:50%" )
        %h3
          {{apply.applyname}}
          %div(style="float:right" )
            {{apply.phone}}
%footer
  %ul.footer-nav.footer-nav-2tabs
    %li.active
      %a(href="" )
        报名
    %li
      %a(href="#/bidlist/{{activity_name}}" )
        竞价